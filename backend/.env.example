# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/family_archive_ai

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (generate a strong secret in production)
JWT_SECRET=your-super-secret-jwt-key

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf

# OCR Configuration
TESSERACT_LANG=ara+eng

# AI/ML API Keys (if using external services)
# GOOGLE_VISION_API_KEY=your-api-key
# OPENAI_API_KEY=your-openai-api-key
